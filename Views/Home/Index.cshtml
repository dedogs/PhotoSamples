@model IEnumerable<string>

@{
    ViewBag.Title = "Home Page";
}

<section></section>

<script>

    function preLoadImages() {
        var src = [],
            image,
            section = $("section").first().hide(),
            div,
            i = 0;
        @{
            string[] src = Model.ToArray();

            for (int i = 0; i < Model.Count(); i++) {
                @:src[@i] = '@Html.Raw(src[i])';
                                                                      }
           }

        i = 0;
        (function imageLoad() {
            if (src[i]) {
                image = document.createElement('img');
                image.src = src[i];
                image.onload = function() {
                    i++;
                    
                    div = $("<div>").attr("class", "img-content");
                    div.append(image);
                    section.append(div);

                    imageLoad();
                }
            } else {
                div = $("<div>").attr("class", "break-all").html("&nbsp;");
                section.append(div);
                section.show();
            }
        }())
    }
</script>